{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "ESNEXT"
        ],
        "declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "outDir": "./dist",
        "baseUrl": "./src",
        "incremental": true,
        "typeRoots": [ 
            "./node_modules/@types",
            "./@types"
        ],
        "types": [ 
            "swiftyjs",
            "node"
        ],
        "paths": {
            "swiftyjs/*" : [ 
              "../@types/swiftyjs/*",
            ],
            "swiftyjs" : [ 
              "../@types/swiftyjs",
            ],
        },
    },
    "ts-node": {
        "transpileOnly": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "dist", "@types"]
}
